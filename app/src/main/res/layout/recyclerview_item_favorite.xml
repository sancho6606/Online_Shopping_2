<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Загрузка..."
                android:id="@+id/textviewfavoritename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView

                android:singleLine="true"
                android:layout_below="@id/textviewfavoritename"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Загрузка..."
                android:id="@+id/textviewfavoritedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView

                android:singleLine="true"
                android:layout_below="@id/textviewfavoritedescription"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Загрузка..."
                android:id="@+id/textviewfavoriteprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            
            <ImageView
                android:id="@+id/imageviewfavoritedelete"
                android:layout_alignParentEnd="true"
                android:src="@drawable/round_clear_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>